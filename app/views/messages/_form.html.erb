<div class="col-md-8 col-md-offset-2">
  <%= simple_form_for @message do |f| %>
      <%= f.input :title, label: "Message Title" %>
      <%= f.input :decription %>
      <%= f.input :venue, input_html: {:id => "search-field"} %>
      <%= f.hidden_field :lat, id: 'lat' %>
      <%= f.hidden_field :lng, id: 'lng' %>
      <%= f.button :submit %>
  <% end %>
</div>